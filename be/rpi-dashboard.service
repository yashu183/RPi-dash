[Unit]
Description=Raspberry Pi Dashboard API Server
After=network.target

[Service]
Type=exec
User=pi
Group=pi
WorkingDirectory=/home/pi/RPi-dash/be
Environment=PATH=/home/pi/RPi-dash/be/.venv/bin
ExecStart=/home/pi/RPi-dash/be/.venv/bin/gunicorn --config gunicorn.conf.py server:app
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target